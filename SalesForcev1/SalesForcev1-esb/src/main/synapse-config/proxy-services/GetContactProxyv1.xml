<?xml version="1.0" encoding="UTF-8"?>
<proxy name="GetContactProxyv1" startOnLoad="true" transports="http https" xmlns="http://ws.apache.org/ns/synapse">
    <target>
        <inSequence>
            <call-template description="call EntrySequence" target="conf:syn/sharedResources/sequences/EntrySequenceTemplate.xml">
                <with-param name="serviceName" value="GetContactProxyv1"/>
            </call-template>
            <enrich description="Save originalPayload">
                <source clone="false" type="body"/>
                <target property="originalPayload" type="property"/>
            </enrich>
            <call-template description="get QueryInput as JSON" target="conf:syn/sharedResources/sequences/QueryInputAsJSON.xml">
                <with-param name="uri_template_value" value="/services/GetContactProxyv1/contacts/{contactId}"/>
            </call-template>
            <log description="parse parameters" level="custom" separator=",">
                <property name="status" value="parsed the json parameters:"/>
                <property expression="$ctx:YLO_URI_PARAMS" name="URL Params"/>
            </log>
            <property description="technicalId" expression="get-property('MessageID')" name="technicalId" scope="default" type="STRING"/>
            <property description="businessCase" name="businessCase" scope="default" type="STRING" value="GetContactProxyv1"/>
            <property description="businessId" expression="//contactId" name="businessId" scope="default" type="STRING"/>
            <log description="Request" level="custom">
                <property name="status" value="E2E received input request"/>
                <property expression="$ctx:technicalId" name="technicalId"/>
                <property expression="$ctx:businessCase" name="businessCase"/>
                <property expression="$ctx:businessId" name="businessId"/>
            </log>
            <sequence key="ObtainSalesforceAccessToken"/>
            <sequence key="GetSalesforceContact"/>
        </inSequence>
        <outSequence>
            <log description="Response" level="custom">
                <property name="status" value="E2E sending output response"/>
                <property expression="$ctx:technicalId" name="technicalId"/>
                <property expression="$ctx:businessCase" name="businessCase"/>
                <property expression="$ctx:businessId" name="businessId"/>
            </log>
            <send/>
        </outSequence>
        <faultSequence>
            <log category="ERROR" description="ERROR" level="full">
                <property expression="$ctx:ERROR_CODE" name="ERROR_CODE"/>
                <property expression="$ctx:ERROR_DETAIL" name="ERROR_DETAIL"/>
                <property expression="$ctx:ERROR_MESSAGE" name="ERROR_MESSAGE"/>
                <property expression="$ctx:ERROR_EXCEPTION" name="ERROR_EXCEPTION"/>
            </log>
        </faultSequence>
    </target>
</proxy>
